<project xsi:schemaLocation="http://maven.apache.org/DECORATION/1.7.0 http://maven.apache.org/xsd/decoration-1.7.0.xsd"
         name="Lightweight RDF Annotations" xmlns="http://maven.apache.org/DECORATION/1.7.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <bannerLeft>
    <name>${project.name}</name>
    <src>/images/dc-logo.gif</src>
    <alt>Data Conservancy Home Page</alt>
    <href>http://dataconservancy.org</href>
    <title>Data Conservancy Logo</title>
  </bannerLeft>

  <publishDate/>

  <version/>

  <skin>
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.5</version>
  </skin>

  <body>

    <head>
      <![CDATA[
        <meta prefix="og: http://ogp.me/ns#" property="og:title" content="${project.name}"/>
        <meta prefix="og: http://ogp.me/ns#" property="og:url" content="${project.url}"/>
        <meta prefix="og: http://ogp.me/ns#" property="og:type" content="website"/>
        <meta prefix="og: http://ogp.me/ns#" property="og:image" content="images/dc-logo.gif"/>
        <meta prefix="og: http://ogp.me/ns#" property="og:image:type" content="image/gif"/>
      ]]>
    </head>

    <links>
      <item name="Home" href="./"/>
    </links>

    <menu ref="reports"/>

  </body>

  <custom>
    <fluidoSkin>
      <leftColumnClass>span3</leftColumnClass>
      <bodyColumnClass>span9</bodyColumnClass>
      <favicon>
        <faviconUrl>images/dc-favico.png</faviconUrl>
        <faviconMimeType>image/png</faviconMimeType>
      </favicon>
    </fluidoSkin>
  </custom>

</project>